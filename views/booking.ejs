<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Seat Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .screen {
            background: #ccc;
            height: 70px;
            width: 100%;
            margin: 15px 0;
            transform: rotateX(-45deg);
            box-shadow: 0 3px 10px rgba(255,255,255,0.7);
            text-align: center;
            line-height: 70px;
        }
        .seat-container {
            perspective: 1000px;
            margin: 40px 0;
        }
        .row {
            display: flex;
            justify-content: center;
            margin: 5px;
        }
        .seat {
            background-color: #444451;
            height: 30px;
            width: 35px;
            margin: 3px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            cursor: pointer;
        }
        .seat.selected {
            background-color: #6feaf6;
        }
        .seat.occupied {
            background-color: #fff;
        }
        .seat:not(.occupied):hover {
            cursor: pointer;
            transform: scale(1.2);
        }
        .showcase .seat:not(.occupied):hover {
            cursor: default;
            transform: scale(1);
        }
        .showcase {
            background: rgba(0,0,0,0.1);
            padding: 5px 10px;
            border-radius: 5px;
            color: #777;
            list-style-type: none;
            display: flex;
            justify-content: space-between;
        }
        .showcase li {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 10px;
        }
        .showcase li small {
            margin-left: 2px;
        }
        .row-label {
            margin-right: 10px;
            width: 30px;
            text-align: right;
            line-height: 35px;
        }
    </style>
</head>
<body class="bg-dark text-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Book Movie Tickets</h1>

        <!-- Movie Selection -->
        <div class="row mb-4">
            <div class="col-md-6 mx-auto">
                <div class="form-group">
                    <label for="movieSelect">Select Movie</label>
                    <select class="form-control" id="movieSelect" required>
                        <% movies.forEach(movie => { %>
                            <option value="<%= movie.name %>" data-price="<%= movie.price %>">
                                <%= movie.name %> - ₹<%= movie.price %>
                            </option>
                        <% }); %>
                    </select>
                </div>
            </div>
        </div>

        <!-- User Details -->
        <div class="row mb-4">
            <div class="col-md-6 mx-auto">
                <div class="form-group mb-3">
                    <label for="name">Your Name</label>
                    <input type="text" class="form-control" id="name" required>
                </div>
                <div class="form-group mb-3">
                    <label for="email">Email Address</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
            </div>
        </div>
        
        <ul class="showcase">
            <li>
                <div class="seat"></div>
                <small>Available</small>
            </li>
            <li>
                <div class="seat selected"></div>
                <small>Selected</small>
            </li>
            <li>
                <div class="seat occupied"></div>
                <small>Occupied</small>
            </li>
        </ul>

        <div class="seat-container">
            <div class="screen">SCREEN</div>
            
            <% const rows = ['A', 'B', 'C', 'D', 'E', 'F', 'G']; %>
            <% rows.forEach(row => { %>
                <div class="d-flex align-items-center">
                    <div class="row-label"><%= row %></div>
                    <div class="row">
                        <% for(let i = 1; i <= 12; i++) { %>
                            <div class="seat" data-seat="<%= row + i %>"></div>
                        <% } %>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="text-center mt-4">
            <p>Selected Seats: <span id="selected-seats"></span></p>
            <p>Total Price: ₹<span id="total-price">0</span></p>
            <button class="btn btn-primary" id="book-btn">Book Tickets</button>
        </div>
    </div>

    <script>
        const container = document.querySelector('.seat-container');
        const seats = document.querySelectorAll('.row .seat:not(.occupied)');
        const selectedSeatsElement = document.getElementById('selected-seats');
        const totalPriceElement = document.getElementById('total-price');
        const bookBtn = document.getElementById('book-btn');
        const movieSelect = document.getElementById('movieSelect');

        function getSelectedMoviePrice() {
            const selectedOption = movieSelect.options[movieSelect.selectedIndex];
            return parseInt(selectedOption.dataset.price);
        }

        function updateSelectedCount() {
            const selectedSeats = document.querySelectorAll('.row .seat.selected');
            const selectedSeatsArray = [...selectedSeats].map(seat => seat.dataset.seat);
            const pricePerSeat = getSelectedMoviePrice();
            
            selectedSeatsElement.textContent = selectedSeatsArray.join(', ');
            totalPriceElement.textContent = selectedSeatsArray.length * pricePerSeat;
        }

        container.addEventListener('click', (e) => {
            if (e.target.classList.contains('seat') && !e.target.classList.contains('occupied')) {
                e.target.classList.toggle('selected');
                updateSelectedCount();
            }
        });

        movieSelect.addEventListener('change', updateSelectedCount);

        bookBtn.addEventListener('click', () => {
            const selectedSeats = document.querySelectorAll('.row .seat.selected');
            const seats = [...selectedSeats].map(seat => seat.dataset.seat);
            const name = document.getElementById('name').value;
            const email = document.getElementById('email').value;
            const movie = movieSelect.value;
            const amount = parseInt(totalPriceElement.textContent);
            
            if (!name || !email) {
                alert('Please fill in your name and email');
                return;
            }
            
            if (seats.length === 0) {
                alert('Please select at least one seat');
                return;
            }

            // Convert seats to array before sending
            const bookingData = {
                name,
                email,
                movie,
                seats: seats, // This ensures seats is sent as an array
                amount
            };

            // Submit booking
            fetch('/book', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(bookingData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    window.location.href = '/success';
                } else {
                    alert(data.error || 'Booking failed. Please try again.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            });
        });
    </script>
</body>
</html> 