<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Preview - Cinema Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(120deg, #1e3c72, #2a5298);
            color: white;
            min-height: 100vh;
        }
        .payment-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
        }
        .booking-summary {
            background: rgba(0, 0, 0, 0.2);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }
        .detail-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
            padding: 5px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        .timer {
            font-size: 1.2rem;
            color: #ffc107;
            text-align: center;
            margin-bottom: 20px;
        }
        #confirmButton {
            transition: all 0.3s ease;
        }
        #confirmButton:disabled {
            background-color: #6c757d;
            border-color: #6c757d;
            cursor: not-allowed;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="payment-container">
            <h2 class="text-center mb-4">Payment Preview</h2>
            <div class="timer" id="timer">
                Time remaining: 10:00
            </div>
            <div class="booking-summary">
                <h4 class="mb-3">Booking Summary</h4>
                <div class="detail-row">
                    <span>Movie</span>
                    <span><%= booking.movie %></span>
                </div>
                <div class="detail-row">
                    <span>Seats</span>
                    <span><%= booking.seats.join(', ') %></span>
                </div>
                <div class="detail-row">
                    <span>Total Amount</span>
                    <span>â‚¹<%= booking.amount %></span>
                </div>
            </div>
            <form method="POST" action="/payment-preview-success">
                <button type="submit" class="btn btn-primary w-100" id="confirmButton">
                    Confirm Payment (Preview)
                </button>
            </form>
        </div>
    </div>
    <script>
        // Timer functionality
        let timeLeft = 600; // 10 minutes in seconds
        const timerElement = document.getElementById('timer');
        const confirmButton = document.getElementById('confirmButton');

        const timerInterval = setInterval(() => {
            timeLeft--;
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;
            timerElement.textContent = `Time remaining: ${minutes}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeLeft <= 0) {
                clearInterval(timerInterval);
                confirmButton.disabled = true;
                window.location.href = '/booking-expired';
            }
        }, 1000);

        // Simple form submission handling
        confirmButton.addEventListener('click', () => {
            confirmButton.disabled = true;
            confirmButton.textContent = 'Processing...';
        });
    </script>
</body>
</html> 