{
    "version": 2,
    "builds": [
        {
            "src": "src/app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/ws",
            "dest": "src/app.js",
            "headers": {
                "Upgrade": "websocket",
                "Connection": "upgrade"
            }
        },
        {
            "src": "/(.*)",
            "dest": "src/app.js"
        }
    ],
    "env": {
        "NODE_ENV": "production",
        "BASE_URL": "https://movie-gilt-six.vercel.app",
        "SESSION_SECRET": "your-secret-key",
        "VERCEL": "1"
    }
} 